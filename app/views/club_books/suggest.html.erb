<div class="max-w-2xl mx-auto px-6 py-8">
  <h1 class="font-display text-2xl font-light mb-8"><%= t("club_books.suggest.title") %></h1>

  <%= form_with url: suggest_club_club_books_path(@club), method: :post, class: "space-y-6" do |f| %>
    <%= render "books/search", club: @club %>

    <div>
      <label class="block text-sm font-medium text-ink mb-1"><%= t("club_books.suggest.note_label") %></label>
      <textarea name="notes" rows="3"
                placeholder="<%= t("club_books.suggest.note_placeholder") %>"
                class="w-full px-4 py-2 border border-cream rounded-lg focus:outline-none focus:ring-2 focus:ring-vermillion/20 focus:border-vermillion"></textarea>
    </div>

    <div class="pt-4 border-t border-cream">
      <%= f.submit t("club_books.suggest.submit"),
          class: "w-full px-6 py-3 bg-vermillion text-white font-medium rounded-lg hover:bg-vermillion-dark transition-colors cursor-pointer" %>
    </div>
  <% end %>
</div>
