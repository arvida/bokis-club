<div class="max-w-2xl mx-auto px-2 sm:px-6 py-8">
  <h1 class="font-display text-2xl font-light mb-8"><%= t("club_books.new.title") %></h1>

  <%= form_with url: club_club_books_path(@club), method: :post, class: "space-y-6" do |f| %>
    <%= render "books/search", club: @club %>

    <div class="pt-4 border-t border-cream flex flex-col gap-3">
      <button type="submit" name="start_reading" value="1"
          class="w-full px-6 py-3 bg-vermillion text-white font-medium rounded-lg hover:bg-vermillion-dark transition-colors cursor-pointer">
        <%= t("club_books.new.start_now") %>
      </button>

      <% unless @club.next_club_book %>
        <button type="submit" name="queue_next" value="1"
            class="w-full px-6 py-3 bg-sage text-white font-medium rounded-lg hover:bg-sage/80 transition-colors cursor-pointer">
          <%= t("club_books.new.queue_next") %>
        </button>
      <% end %>
    </div>
  <% end %>
</div>
