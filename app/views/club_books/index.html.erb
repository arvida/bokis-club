<div class="max-w-2xl mx-auto px-6 py-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="font-display text-2xl font-light"><%= t("club_books.index.title") %></h1>
    <%= link_to t("club_books.index.suggest_book"),
        suggest_club_club_books_path(@club),
        class: "px-4 py-2 border border-vermillion text-vermillion text-sm font-medium rounded-lg hover:bg-vermillion hover:text-white transition-colors" %>
  </div>

  <% if @suggested_books.any? %>
    <div class="space-y-4">
      <% @suggested_books.each do |club_book| %>
        <%= render "club_books/suggestion_card", club_book: club_book %>
      <% end %>
    </div>

    <% if @club.admin?(current_user) && @suggested_books.size >= 2 %>
      <div class="mt-8 pt-8 border-t border-cream">
        <h2 class="font-display text-lg font-light mb-4 text-center"><%= t("club_books.index.start_voting_title") %></h2>
        <%= form_with url: start_voting_club_club_books_path(@club), method: :post, class: "space-y-4" do |f| %>
          <div>
            <label for="voting_deadline" class="block text-sm font-medium text-ink-muted mb-2">
              <%= t("club_books.index.voting_deadline_label") %>
            </label>
            <input type="datetime-local"
                   name="voting_deadline"
                   id="voting_deadline"
                   value="<%= 7.days.from_now.strftime('%Y-%m-%dT%H:%M') %>"
                   class="w-full px-4 py-3 bg-paper rounded-lg border border-cream focus:outline-none focus:ring-2 focus:ring-vermillion/20 focus:border-vermillion" />
            <p class="text-xs text-ink-subtle mt-1"><%= t("club_books.index.voting_deadline_hint") %></p>
          </div>
          <div class="text-center">
            <button type="submit" class="px-6 py-3 bg-vermillion text-white font-medium rounded-lg hover:bg-vermillion-dark transition-colors">
              <%= t("club_books.index.start_voting") %>
            </button>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-12">
      <p class="text-ink-muted mb-4"><%= t("club_books.index.empty") %></p>
      <%= link_to t("club_books.index.suggest_book"),
          suggest_club_club_books_path(@club),
          class: "inline-block px-6 py-3 bg-vermillion text-white font-medium rounded-lg hover:bg-vermillion-dark transition-colors" %>
    </div>
  <% end %>
</div>
