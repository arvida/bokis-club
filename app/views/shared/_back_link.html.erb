<%# Back link with arrow icon
   Usage:
     Header style (default): render "shared/back_link", path: club_path(@club)
     Button style: render "shared/back_link", path: club_path(@club), text: "Tillbaka", style: :button
%>
<% button_style = local_assigns[:style] == :button %>
<% link_class = button_style ?
    "inline-flex items-center gap-2 px-4 py-3 border border-ink-muted text-ink-muted text-sm font-medium rounded-lg hover:border-ink hover:text-ink transition-colors" :
    "inline-flex items-center gap-2 min-h-[44px] py-2 pr-3 text-ink-muted hover:text-ink transition-colors" %>
<%= link_to path, class: link_class do %>
  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
  </svg>
  <% if local_assigns[:text] %>
    <span class="text-sm font-medium"><%= text %></span>
  <% end %>
<% end %>
