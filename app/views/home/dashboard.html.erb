<div class="max-w-4xl mx-auto py-8 px-2 sm:px-6">
  <%= render "shared/pwa_banner" %>

  <% if @clubs.any? %>
    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between mb-8">
      <h1 class="font-display text-3xl font-light">
        <%= @clubs.one? ? t("home.dashboard.title_single") : t("home.dashboard.title") %>
      </h1>
      <%= link_to new_club_path, class: "hidden sm:inline-flex items-center gap-2 px-4 py-2 border border-ink-muted text-ink-muted text-sm font-medium rounded-lg hover:border-ink hover:text-ink transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <%= t("home.dashboard.create") %>
      <% end %>
    </div>

    <% if @clubs.one? %>
      <div class="max-w-lg">
        <%= render "clubs/dashboard_card", club: @clubs.first, size: :large %>
      </div>
    <% else %>
      <div class="grid gap-4 sm:grid-cols-2">
        <% @clubs.each do |club| %>
          <%= render "clubs/dashboard_card", club: club %>
        <% end %>
      </div>
    <% end %>

    <%# Mobile FAB %>
    <%= link_to new_club_path,
        class: "sm:hidden fixed bottom-20 right-4 w-14 h-14 bg-vermillion text-white rounded-full shadow-lg flex items-center justify-center z-30 active:bg-vermillion-dark transition-colors",
        aria: { label: t("home.dashboard.create") } do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
    <% end %>
  <% else %>
    <%= render "home/empty_state" %>
  <% end %>
</div>
