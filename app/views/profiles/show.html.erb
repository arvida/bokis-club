<div class="max-w-xl mx-auto py-8">
  <h1 class="font-display text-3xl font-light mb-8"><%= t("profiles.show.title") %></h1>

  <div class="mb-8 flex items-center gap-4">
    <%= render "shared/avatar", user: current_user, size: :xl %>
    <div>
      <p class="font-medium text-lg"><%= current_user.name %></p>
      <p class="text-ink-muted"><%= current_user.email %></p>
    </div>
  </div>

  <%= form_with model: current_user, url: profile_path, method: :patch, multipart: true, class: "space-y-6" do |f| %>
    <div>
      <%= f.label :name, t("profiles.show.name"), class: "block text-sm font-medium text-ink-light mb-2" %>
      <%= f.text_field :name,
          class: "w-full px-4 py-3 rounded-lg border border-cream bg-paper-warm focus:border-vermillion focus:ring-1 focus:ring-vermillion transition-colors #{current_user.errors[:name].any? ? 'border-vermillion' : ''}",
          required: true %>
      <% if current_user.errors[:name].any? %>
        <p class="mt-1 text-sm text-vermillion"><%= current_user.errors[:name].first %></p>
      <% end %>
    </div>

    <div>
      <%= f.label :avatar, t("profiles.show.avatar"), class: "block text-sm font-medium text-ink-light mb-2" %>
      <%= f.file_field :avatar,
          accept: "image/*",
          class: "w-full px-4 py-3 rounded-lg border border-cream bg-paper-warm focus:border-vermillion focus:ring-1 focus:ring-vermillion transition-colors file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-sage file:text-white file:cursor-pointer hover:file:bg-sage/80" %>
      <p class="mt-1 text-sm text-ink-subtle"><%= t("profiles.show.avatar_hint") %></p>
    </div>

    <div>
      <%= f.label :locale, t("profiles.show.language"), class: "block text-sm font-medium text-ink-light mb-2" %>
      <%= f.select :locale,
          [[t("profiles.show.languages.sv"), "sv"], [t("profiles.show.languages.en"), "en"]],
          {},
          class: "w-full px-4 py-3 rounded-lg border border-cream bg-paper-warm focus:border-vermillion focus:ring-1 focus:ring-vermillion transition-colors" %>
    </div>

    <div class="pt-4">
      <%= f.submit t("profiles.show.submit"),
          class: "w-full px-6 py-3 bg-vermillion text-white font-medium rounded-lg hover:bg-vermillion-dark transition-colors cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-12 pt-8 border-t border-cream">
    <%= button_to t("profiles.show.logout"), logout_path, method: :delete,
        class: "text-ink-muted hover:text-vermillion transition-colors" %>
  </div>
</div>
