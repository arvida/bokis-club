<div class="max-w-md mx-auto py-16">
  <h1 class="font-display text-3xl font-light text-center mb-4">
    <%= t("registrations.new.title") %>
  </h1>

  <p class="text-center text-ink-muted mb-8">
    <%= t("registrations.new.description") %>
  </p>

  <%= form_with model: @user, url: signup_path, method: :post, class: "space-y-6", data: { turbo: false } do |f| %>
    <% if @user.errors.any? %>
      <div class="p-4 bg-vermillion/10 border border-vermillion rounded-lg">
        <ul class="text-sm text-vermillion">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name,
          t("registrations.new.name.label"),
          class: "block text-sm font-medium text-ink-muted mb-2" %>
      <%= f.text_field :name,
          required: true,
          autofocus: true,
          placeholder: t("registrations.new.name.placeholder"),
          class: "form-input" %>
    </div>

    <div>
      <%= f.label :email,
          t("registrations.new.email.label"),
          class: "block text-sm font-medium text-ink-muted mb-2" %>
      <%= f.email_field :email,
          required: true,
          placeholder: t("registrations.new.email.placeholder"),
          class: "form-input" %>
    </div>

    <%# Honeypot field - hidden from humans, filled by bots %>
    <div class="absolute left-[-9999px]" aria-hidden="true">
      <%= label_tag :website, "Leave this empty", class: "block text-sm" %>
      <%= text_field_tag :website, nil, tabindex: "-1", autocomplete: "off" %>
    </div>

    <%= f.submit t("registrations.new.submit"),
        class: "w-full px-6 py-3 bg-vermillion text-white font-medium rounded-lg hover:bg-vermillion-dark transition-colors cursor-pointer" %>
  <% end %>

  <p class="mt-6 text-center text-ink-muted">
    <%= link_to t("registrations.new.login_link"), login_path, class: "text-vermillion hover:text-vermillion-dark transition-colors" %>
  </p>
</div>
