<div class="bg-sage/5 rounded-lg p-6 mb-8 border border-sage/20">
  <span class="inline-block text-xs font-medium tracking-widest text-sage mb-4">
    <%= t("clubs.next_book_section.department") %>
  </span>

  <div class="flex gap-4">
    <div class="flex-shrink-0 w-16">
      <%= render "shared/book_cover", book: next_club_book.book, class: "w-full shadow rounded" %>
    </div>

    <div class="flex-1 min-w-0">
      <h3 class="font-display text-lg italic font-light mb-1 truncate"><%= next_club_book.book.title %></h3>
      <% if next_club_book.book.authors.present? %>
        <p class="text-ink-muted text-sm truncate"><%= next_club_book.book.author_names %></p>
      <% end %>
    </div>
  </div>

  <% if is_admin %>
    <div class="mt-4 pt-4 border-t border-sage/20 flex flex-col gap-3">
      <%= button_to t("clubs.next_book_section.start_reading"),
          start_next_book_club_club_books_path(club),
          method: :post,
          class: "w-full px-4 py-3 bg-sage text-white font-medium rounded-lg hover:bg-sage/80 transition-colors" %>

      <%= button_to t("clubs.next_book_section.cancel"),
          cancel_next_book_club_club_books_path(club),
          method: :delete,
          form: { data: { turbo_confirm: t("clubs.next_book_section.cancel_confirm") } },
          class: "w-full px-4 py-2 border border-ink-muted text-ink-muted text-sm font-medium rounded-lg hover:border-ink hover:text-ink transition-colors" %>
    </div>
  <% end %>
</div>
