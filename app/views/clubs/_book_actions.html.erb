<div class="mb-6 sm:mb-8">
  <%# Action pills - unified row %>
  <div class="flex items-center justify-center gap-2 flex-wrap">
    <%# Primary: Suggest a book %>
    <%= link_to suggest_club_club_books_path(club),
        class: "group flex items-center gap-1.5 px-4 py-3 min-h-[44px] bg-vermillion/10 rounded-full text-vermillion hover:bg-vermillion/20 active:scale-[0.97] transition-all" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
      <span class="text-sm font-medium"><%= t("clubs.book_actions.suggest") %></span>
    <% end %>

    <%# Meetings %>
    <%= link_to club_meetings_path(club),
        class: "group flex items-center gap-1.5 px-4 py-3 min-h-[44px] bg-cream/50 rounded-full text-ink-muted hover:bg-cream hover:text-ink active:scale-[0.97] transition-all" do %>
      <span class="text-sm font-medium"><%= t("clubs.book_actions.meetings") %></span>
      <% if local_assigns[:meeting_soon] %>
        <span class="w-2 h-2 bg-sage rounded-full animate-pulse"></span>
      <% elsif local_assigns[:upcoming_meetings_count] && upcoming_meetings_count > 0 %>
        <span class="text-xs text-sage font-medium"><%= upcoming_meetings_count %></span>
      <% end %>
    <% end %>

    <%# Book suggestions %>
    <%= link_to club_club_books_path(club),
        class: "group flex items-center gap-1.5 px-4 py-3 min-h-[44px] bg-cream/50 rounded-full text-ink-muted hover:bg-cream hover:text-ink active:scale-[0.97] transition-all" do %>
      <span class="text-sm font-medium"><%= t("clubs.book_actions.suggestions") %></span>
      <% if suggestions_count > 0 %>
        <span class="text-xs text-vermillion font-medium"><%= suggestions_count %></span>
      <% end %>
    <% end %>
  </div>

  <%# Voting CTA when active %>
  <% if voting_active %>
    <%= link_to vote_club_club_books_path(club),
        class: "group flex items-center justify-between w-full px-5 py-4 bg-vermillion/5 rounded-xl border border-vermillion/20 hover:border-vermillion/40 active:scale-[0.99] transition-all" do %>
      <div class="flex items-center gap-3">
        <span class="w-8 h-8 rounded-full bg-vermillion/10 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-vermillion" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
        </span>
        <div>
          <span class="text-sm font-medium text-vermillion"><%= t("clubs.book_actions.vote") %></span>
          <span class="block text-xs text-vermillion/60"><%= t("clubs.book_actions.vote_active") %></span>
        </div>
      </div>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-vermillion group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
      </svg>
    <% end %>
  <% end %>
</div>
