<div class="bg-sage/5 rounded-lg p-6 mb-8 border border-sage/20">
  <div class="flex items-center justify-between mb-4">
    <span class="inline-block text-xs font-medium tracking-widest text-sage">
      <%= t("meetings.next_meeting.department") %>
    </span>
    <%= link_to t("meetings.next_meeting.view_all"),
        club_meetings_path(club),
        class: "text-xs text-sage hover:text-sage-dark transition-colors" %>
  </div>

  <% next_meeting = club.meetings.upcoming.first %>

  <% if next_meeting %>
    <%= link_to club_meeting_path(club, next_meeting), class: "block group" do %>
      <div class="flex gap-4">
        <div class="text-center flex-shrink-0">
          <div class="text-3xl font-display font-light text-ink group-hover:text-vermillion transition-colors">
            <%= next_meeting.scheduled_at.day %>
          </div>
          <div class="text-sm text-ink-muted uppercase">
            <%= I18n.l(next_meeting.scheduled_at, format: "%b") %>
          </div>
        </div>

        <div class="flex-1 min-w-0">
          <h3 class="font-medium text-ink group-hover:text-vermillion transition-colors truncate">
            <%= next_meeting.title %>
          </h3>
          <p class="text-sm text-ink-muted">
            <%= I18n.l(next_meeting.scheduled_at, format: "%H:%M") %>
            <% if next_meeting.location.present? %>
              Â· <%= truncate(next_meeting.location, length: 25) %>
            <% end %>
          </p>

          <% if next_meeting.attendee_count > 0 %>
            <div class="flex items-center gap-2 mt-2">
              <div class="flex -space-x-2">
                <% next_meeting.attendees.first(3).each do |attendee| %>
                  <%= render "shared/avatar", user: attendee, size: :xs, border: true %>
                <% end %>
                <% if next_meeting.attendee_count > 3 %>
                  <div class="w-6 h-6 rounded-full bg-cream border-2 border-paper flex items-center justify-center">
                    <span class="text-xs text-ink-muted">+<%= next_meeting.attendee_count - 3 %></span>
                  </div>
                <% end %>
              </div>
              <span class="text-xs text-ink-muted">
                <%= next_meeting.attendee_count %> <%= next_meeting.attendee_count == 1 ? "kommer" : "kommer" %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="mt-4 pt-4 border-t border-sage/20">
      <% user_rsvp = next_meeting.rsvp_for(current_user) %>
      <%= render "meetings/rsvp_pills", meeting: next_meeting, user_rsvp: user_rsvp, club: club %>
    </div>
  <% else %>
    <div class="text-center py-4">
      <p class="text-ink-muted mb-4"><%= t("meetings.next_meeting.no_meeting") %></p>
      <% if is_admin %>
        <%= link_to t("meetings.next_meeting.create"),
            new_club_meeting_path(club),
            class: "inline-block px-4 py-2 bg-sage text-white text-sm font-medium rounded-lg hover:bg-sage-dark transition-colors" %>
      <% end %>
    </div>
  <% end %>
</div>
