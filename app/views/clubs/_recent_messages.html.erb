<div class="mb-6 sm:mb-8">
  <div class="flex items-center justify-between mb-3">
    <h2 class="font-medium text-ink"><%= t("messages.link.title") %></h2>
    <%= link_to club_messages_path(club), class: "text-sm text-vermillion hover:text-vermillion-dark transition-colors" do %>
      <%= t("messages.recent.view_all") %> â†’
    <% end %>
  </div>

  <% if messages.any? %>
    <div class="space-y-2">
      <% messages.each do |message| %>
        <%= link_to club_messages_path(club), class: "block p-3 bg-cream/30 rounded-lg hover:bg-cream/50 transition-colors" do %>
          <div class="flex items-start gap-2">
            <%= render "shared/avatar", user: message.user, size: :xs %>
            <div class="flex-1 min-w-0">
              <div class="flex items-baseline gap-2">
                <span class="font-medium text-ink text-sm"><%= message.user.name %></span>
                <time class="text-xs text-ink-muted"><%= time_ago_in_words(message.created_at) %></time>
              </div>
              <p class="text-sm text-ink-muted truncate"><%= message.content.truncate(80) %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <%= link_to club_messages_path(club), class: "flex items-center justify-between p-4 bg-cream/30 rounded-lg hover:bg-cream/50 transition-colors group" do %>
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-full bg-sage/10 flex items-center justify-center">
          <svg class="w-5 h-5 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
        </div>
        <div>
          <span class="font-medium text-ink"><%= t("messages.recent.start_discussion") %></span>
          <p class="text-sm text-ink-muted"><%= t("messages.link.description") %></p>
        </div>
      </div>
      <svg class="w-5 h-5 text-ink-muted group-hover:text-ink transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    <% end %>
  <% end %>
</div>
